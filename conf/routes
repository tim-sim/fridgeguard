# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                     controllers.Application.root()

GET         /new                  controllers.Application.newFridge()
POST        /new                  controllers.Application.saveFridge()

GET         /:fridgeId            controllers.Application.index(fridgeId:Long)
GET         /:fridgeId/new        controllers.Application.newProduct(fridgeId:Long)
POST        /:fridgeId/new        controllers.Application.saveProduct(fridgeId:Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)
